@model IEnumerable<BrandModel>

@{
    ViewData["title"] = "Brand List";
}
<h4>List Brand</h4>
<a class="btn btn-success" asp-area="Admin" asp-action="Create" asp-controller="Brand">Add new Brand</a>
<table class="table" id="mytable">
    <thead>
        <tr>
            <th scope="col">Brand Id</th>
            <th scope="col">Brand Name</th>
            <th scope="col">Brand Slug</th>
            <th scope="col">Brand Description</th>
            <th scope="col">Brand Status</th>
            <th>Manage</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Slug</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Displayed</span>
                    }
                    else
                    {
                        <span class="text text-danger">Hidden</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-controller="Brand" asp-route-id="@item.Id">
                        <i class="bi bi-pencil"></i>
                        Edit
                    </a>
                    <a class="btn btn-danger confirmDeletion" asp-action="Delete" asp-controller="Brand" asp-route-id="@item.Id">
                        <i class="bi bi-trash"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>