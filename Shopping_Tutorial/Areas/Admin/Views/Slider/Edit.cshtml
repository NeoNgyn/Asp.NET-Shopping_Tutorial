@model SliderModel
@{
	ViewData["title"] = "Edit Slider";
}
<h1>Edit Slider</h1>
<div class="col-md-9">
	<form asp-action="Edit" method="post" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="Id" />
		<div class="form-group">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Description"></label>
			<textarea asp-for="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="ImageUpload"></label>
			<input asp-for="ImageUpload" class="form-control" />
			<span asp-validation-for="ImageUpload" class="text-danger"></span>
			<img id="imgpreview" class="pt-2" />
		</div>
		<div class="form-group">
			<label asp-for="Status"></label>
			<select asp-for="Status" class="form-control">
				<option value="1">Display</option>
				<option value="0">Hidden</option>

			</select>
			<span asp-validation-for="Status" class="text-danger"></span>
		</div>
		<div class="form-group">
			<button class="btn btn-primary">Save</button>
		</div>
	</form>
	<a asp-action="Index" asp-controller="Slider" asp-area="Admin">Back to Categories List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script>
		$("#ImageUpload").change(function(){
			readURL(this);
		})
	</script>
	<script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
	<script>
		CKEDITOR.replace( 'Description' );
	</script>
}















